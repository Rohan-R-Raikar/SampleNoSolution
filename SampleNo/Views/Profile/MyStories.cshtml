@model IEnumerable<SampleNo.Models.StoryDto>
@using SampleNo.Models
@{
    ViewData["Title"] = "My Stories";
}

<h2 class="mb-4">📚 My Stories</h2>

@if (!Model.Any())
{
    <p>No stories found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var story in Model)
        {
            var editId = $"editForm-{story.Id}";
            var cardId = $"cardView-{story.Id}";
            <div class="col">
                <div class="card h-100 shadow-sm border-0">

                    <!-- Card View -->
                    <div id="@cardId" class="card-body">
                        <h5 class="card-title">@story.Title</h5>
                        <p class="card-text text-muted">@story.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Expires: @story.ExpireAt?.ToString("dd MMM yyyy hh:mm tt")</small>
                        </p>
                        <span class="badge bg-info text-dark">Status: @story.Status</span>
                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-sm btn-warning" onclick="toggleEdit('@story.Id')">Edit</button>
                            <form method="post" asp-action="DeleteStory" asp-route-id="@story.Id" onsubmit="return confirm('Are you sure you want to delete this story?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>

                    <!-- Edit Form -->
                    <div id="@editId" class="card-body d-none">
                        <form asp-action="UpdateStoryInline" method="post">
                            <input type="hidden" name="Id" value="@story.Id" />
                            <div class="mb-2">
                                <label>Title</label>
                                <input type="text" class="form-control" name="Title" value="@story.Title" required />
                            </div>
                            <div class="mb-2">
                                <label>Description</label>
                                <textarea class="form-control" name="Description" required>@story.Description</textarea>
                            </div>
                            <div class="mb-2">
                                <label>Status</label>
                                <select class="form-select form-select-sm edit-mode d-none status-select">
                                    <option selected>@story.Status</option>
                                    <option>Published</option>
                                    <option>Scheduled</option>
                                    <option>Draft</option>
                                    <option>Archived</option>
                                </select>
                            </div>
                            <div class="mb-2">
                                <label>Expires At</label>
                                <input type="datetime-local" name="ExpireAt" class="form-control"
                                       value="@story.ExpireAt?.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
                            </div>
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success btn-sm">Save</button>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit('@story.Id')">Cancel</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function toggleEdit(id) {
            const form = document.getElementById('editForm-' + id);
            const card = document.getElementById('cardView-' + id);
            form.classList.toggle('d-none');
            card.classList.toggle('d-none');
        }
    </script>
}
